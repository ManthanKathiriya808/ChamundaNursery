<svg width="400" height="300" viewBox="0 0 400 300" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bg2" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#dc2626;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#b91c1c;stop-opacity:1" />
    </linearGradient>
    <radialGradient id="flower" cx="50%" cy="50%" r="50%">
      <stop offset="0%" style="stop-color:#fbbf24;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#f59e0b;stop-opacity:1" />
    </radialGradient>
  </defs>
  
  <rect width="400" height="300" fill="url(#bg2)"/>
  
  <!-- Pot -->
  <ellipse cx="200" cy="250" rx="60" ry="20" fill="#8b4513"/>
  <rect x="140" y="230" width="120" height="40" fill="#a0522d" rx="5"/>
  
  <!-- Plant stem -->
  <rect x="195" y="180" width="10" height="70" fill="#228b22"/>
  
  <!-- Rose petals -->
  <circle cx="200" cy="150" r="30" fill="#dc2626"/>
  <circle cx="185" cy="140" r="15" fill="#ef4444"/>
  <circle cx="215" cy="140" r="15" fill="#ef4444"/>
  <circle cx="185" cy="160" r="15" fill="#ef4444"/>
  <circle cx="215" cy="160" r="15" fill="#ef4444"/>
  <circle cx="200" cy="150" r="12" fill="#fbbf24"/>
  
  <!-- Leaves -->
  <ellipse cx="170" cy="170" rx="20" ry="10" fill="#16a34a" transform="rotate(-30 170 170)"/>
  <ellipse cx="230" cy="170" rx="20" ry="10" fill="#16a34a" transform="rotate(30 230 170)"/>
  
  <!-- Title -->
  <text x="200" y="40" font-family="Arial, sans-serif" font-size="24" font-weight="bold" text-anchor="middle" fill="white">Rose Plant</text>
  <text x="200" y="65" font-family="Arial, sans-serif" font-size="16" text-anchor="middle" fill="white">Beautiful Blooming Flowers</text>
</svg>