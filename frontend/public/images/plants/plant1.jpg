<svg width="400" height="300" viewBox="0 0 400 300" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bg1" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#22c55e;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#16a34a;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="plant1" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#15803d;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#166534;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <rect width="400" height="300" fill="url(#bg1)"/>
  
  <!-- Pot -->
  <ellipse cx="200" cy="250" rx="60" ry="20" fill="#8b4513"/>
  <rect x="140" y="230" width="120" height="40" fill="#a0522d" rx="5"/>
  
  <!-- Plant stem -->
  <rect x="195" y="180" width="10" height="70" fill="#228b22"/>
  
  <!-- Leaves -->
  <ellipse cx="180" cy="160" rx="25" ry="15" fill="url(#plant1)" transform="rotate(-30 180 160)"/>
  <ellipse cx="220" cy="160" rx="25" ry="15" fill="url(#plant1)" transform="rotate(30 220 160)"/>
  <ellipse cx="170" cy="140" rx="20" ry="12" fill="url(#plant1)" transform="rotate(-45 170 140)"/>
  <ellipse cx="230" cy="140" rx="20" ry="12" fill="url(#plant1)" transform="rotate(45 230 140)"/>
  <ellipse cx="200" cy="120" rx="30" ry="18" fill="url(#plant1)"/>
  
  <!-- Title -->
  <text x="200" y="40" font-family="Arial, sans-serif" font-size="24" font-weight="bold" text-anchor="middle" fill="white">Areca Palm</text>
  <text x="200" y="65" font-family="Arial, sans-serif" font-size="16" text-anchor="middle" fill="white">Perfect for Indoor Spaces</text>
</svg>